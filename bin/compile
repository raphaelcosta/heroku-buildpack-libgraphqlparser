#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# $1 = build_dir (location of the app)
# $2 = cache_dir
# $3 = env_dir (contains a file for each of the app's config variables)

mkdir -p $2
cd $2

# Download libgraphqlparser
if [ ! -f $2/v0.4.1.tar.gz ]; then
  wget https://github.com/graphql/libgraphqlparser/archive/v0.4.1.tar.gz
fi

# Install libgraphqlparser
mkdir -p $2/libgraphqlparser
tar -xvzf v0.4.1.tar.gz -C $2/libgraphqlparser

cd $2/libgraphqlparser/libgraphqlparser-0.4.1

cmake .
make
make install DESTDIR=$2/libgraphqlparser-files

mkdir -p $1/libgraphqlparser
cp -r $2/libgraphqlparser-files/usr/local/* $1/libgraphqlparser

# Make the library files available to later buildpacks
echo "Adding libgraphqlparser to LD_LIBRARY_PATH..."
export LD_LIBRARY_PATH="$1/libgraphqlparser/lib:$LD_LIBRARY_PATH"
echo "$LD_LIBRARY_PATH"

echo "Adding libgraphqlparser to $BUNDLE_BUILD__GRAPHQL-LIBGRAPHQLPARSER..."
export LIBGRAPHQLPARSER_PATH="$1/libgraphqlparser"
#export BUNDLE_BUILD__GRAPHQL-LIBGRAPHQLPARSER="--with-graphql-include=$1/libgraphqlparser/include --with-graphql-lib=$1/libgraphqlparser/lib"
#echo "$BUNDLE_BUILD__GRAPHQL-LIBGRAPHQLPARSER"

exit 0
